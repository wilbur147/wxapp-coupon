.empty-view {
    width: 280rpx;
    height: 280rpx;
    border-radius: 280rpx;
    background-color: #f6f7f8;
    margin-top: 30rpx;
}

.empty-img {
    width: 220rpx;
    height: 200rpx;
    margin: 40rpx;
    border-radius: 200rpx;
}

.grace-order {
    background-color: #fff;
    padding: 20rpx;
    margin: 0 25rpx;
    border-radius: 10rpx;
    margin-top: 30rpx;
    width: 660rpx;
}

.grace-shop {
    line-height: 60rpx;
    font-size: 28rpx;
    font-weight: 700;
    color: #333;
}

.grace-order-goods {
    font-size: 0;
    overflow: hidden;
    width: 660rpx;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    flex-wrap: nowrap;
    -webkit-box-align: center;
    align-items: center;
    padding-bottom: 20rpx;
}

.grace-order-goods-img {
    width: 100rpx;
    height: 100rpx;
}

.grace-order-goods-name {
    line-height: 40rpx;
    width: 100rpx;
    -webkit-box-flex: 1;
    flex: auto;
    overflow: hidden;
    font-size: 26rpx;
    margin: 0 20rpx;
    color: #333;
}

.grace-order-goods-price {
    font-size: 30rpx;
    line-height: 50rpx;
    color: #333;
    padding-left: 10rpx;
    font-weight: 700;
}

.grace-order-goods-num {
    font-size: 22rpx;
    color: #999;
    margin-left: 10rpx;
}

.icon-close {
    font-size: 28rpx;
    color: #999;
    margin-left: 30rpx;
}

.grace-order-footer {
    margin-top: 2px;
}

.grace-order-number {
    line-height: 50rpx;
    color: #999;
    font-size: 26rpx;
    -webkit-box-flex: 1;
    flex: auto;
}

.grace-order-status {
    line-height: 50rpx;
    color: #999;
    font-size: 26rpx;
    width: 100rpx;
    -webkit-box-flex: 1;
    flex: auto;
    text-align: center;
}

.grace-order-btn {
    display: block;
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #999;
    font-size: 22rpx;
    text-align: center;
    border-radius: 60rpx;
    border: 1px solid #999;
    margin-left: 20rpx;
}

.grace-order-btn-red {
    border-color: #ff0036;
    color: #ff0036;
}