.account-head {
    margin: 20rpx 30rpx 10rpx 30rpx;
    position: relative;
    border-radius: 10rpx;
    box-sizing: border-box;
    padding: 30rpx;
}

.account-head .head-bd {
    font-family: font-price;
    font-size: 30rpx;
    margin: 30rpx 0;
    letter-spacing: 3rpx;
}

.account-head .head-sd {
    position: absolute;
    right: 0;
    top: 50rpx;
    background: linear-gradient(90deg,#ce1b15,#b54f4b)!important;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 30rpx;
    border-top-left-radius: 100rpx;
    border-bottom-left-radius: 100rpx;
    font-size: 24rpx;
}

.account-body .body-hd {
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #eee;
    font-weight: 550;
}

.grace-list-body {
    padding-right: 30rpx;
}

.grace-list-title-text {
    font-family: font-price;
}

.empty-view {
    width: 280rpx;
    height: 280rpx;
    margin-top: 100rpx;
}

.empty-img {
    width: 220rpx;
    height: 200rpx;
    margin: 40rpx;
}

.empty-text {
    margin-bottom: 100rpx;
}