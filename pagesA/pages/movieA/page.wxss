.page-body {
    background: #fff;
    overflow: hidden;
}

.page-imgs {
    width: 220rpx;
    height: 180rpx;
    font-size: 0;
    overflow: hidden;
}

.page-imgs image {
    width: 220rpx;
    height: 180rpx;
}

.page-info {
    position: relative;
    width: 100%;
    height: 90rpx;
    margin: 30rpx 0;
}

.info-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    position: absolute;
    left: 0;
}

.info-inner {
    position: relative;
    padding: 0 100rpx 0 100rpx;
}

.info-click {
    color: #999;
    font-size: 24rpx;
    margin-top: 5rpx;
}

.info-share {
    position: absolute;
    right: 0;
    top: 10rpx;
    font-size: 40rpx;
    width: auto!important;
    background: #fff;
    padding: 0;
}

.grace-footer {
    display: flex;
}

.grace-footer-button {
    -webkit-box-flex: 1;
    flex: 1;
    color: #333!important;
}

.grace-border-r {
    border-right: 1rpx solid #e5e5fe!important;
}

.box-alert {
    border-top-left-radius: 4rpx!important;
    border-top-right-radius: 4rpx!important;
    display: block;
    overflow: hidden;
    position: relative;
}

.box-alert .hd {
    width: 100%;
}

.box-alert .alert-banner {
    width: 100%;
    height: 230rpx;
}

.box-alert .bd {
    padding: 40rpx 80rpx;
    font-size: 30rpx;
    line-height: 50rpx;
    letter-spacing: 3rpx;
}

.grace-dialog-buttons {
    padding: 0!important;
    font-weight: 400;
    font-size: 34rpx;
    color: #666;
    background: #fff;
    height: 100rpx;
    line-height: 100rpx;
}