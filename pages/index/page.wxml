<view>
    <grace-page bind:__l="__l" headerBG="none" style="{{'background:url('+page.thumb+') #FFFFFF no-repeat; background-size:100% auto;'}}" vueId="369cdcc1-1" vueSlots="{{['gBody']}}">
        <view slot="gBody">
            <view class="page-body grace-shadow">
                <view class="grace-h5 grace-bold">{{page.title}}</view>
                <view class="page-info grace-border-b">
                    <image class="info-avatar" src="{{page.avatar}}"></image>
                    <view class="info-inner">
                        <view class="info-name">{{page.name}}</view>
                        <view class="info-click" style="padding-bottom:20rpx;">{{page.post_time}}</view>
                    </view>
                </view>
                <view class="grace-margin-top">
                    <rich-text nodes="{{demoHtml}}" type="text"></rich-text>
                </view>
            </view>
        </view>
    </grace-page>
</view>
